@model IEnumerable<Bug>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@item.ScreenShotOfError" class="card-img-top" alt="Screenshot of Error">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Bug" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">View</a>
                                <a asp-controller="Bug" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                            </div>
                            <small class="text-muted">@item.Status</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>