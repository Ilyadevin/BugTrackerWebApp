@model IEnumerable<Bug>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <div class="card mb-4 mb-md-0">
                            <div class="card-body">
                                <p class="mb-4">
                                <span class="text-primary font-italic me-1">@item.Title</span>
                            </p>
                            <img src="@item.ScreenShotOfError" class="card-img-top" alt="Screenshot of Error">
                            </div>
                        <div class="d-flex justify-content-center mb-2">
                            <a asp-controller="Bug" asp-action="Detail" asp-route-id="@item.Id" type="button" class="btn btn-primary">View</a>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                            {
                                <a asp-controller="Bug" asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-outline-primary ms-1">Edit</a>
                            }
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</section>