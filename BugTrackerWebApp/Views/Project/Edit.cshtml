@using BugTrackerWebApp.Data.Enum
@using BugTrackerWebApp.ViewModels
@model EditProjectViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container">
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" value="Id" id="Id" />

        <div class="row justify-content-center">
            <div class="form-group col-md-6">
                <label asp-for="Name">Name of the project</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Enter the title">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="form-group col-md-6">
                <label asp-for="Description">Description</label>
                <input asp-for="Description" type="text" class="form-control" placeholder="Enter the description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="form-group col-md-6">
                <label asp-for="Status">Status</label>
                <select asp-for="Status" asp-items="@Html.GetEnumSelectList<ProjectStatus>()" class="form-control">
                    <option>---Select---</option>
                </select>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <hr class="my-4">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>