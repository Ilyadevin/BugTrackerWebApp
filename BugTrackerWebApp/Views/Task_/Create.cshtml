@{
}
<form method="post" asp-action="Create">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" class="form-control" placeholder="Enter the title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" type="text" class="form-control" placeholder="Enter the description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Priority">Priority</label>
        <select asp-for="Priority" asp-items="@Html.GetEnumSelectList<TaskPriority>()" class="form-control">
            <option>---Select---</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Status">Status</label>
        <select asp-for="Status" asp-items="@Html.GetEnumSelectList<BugStatus>()" class="form-control">
            <option>---Select---</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>